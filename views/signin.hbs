<div class="main">
    <div class="title">
        <h3 style="margin-left: 55px; margin-top: 50px;">{{title}}</h3>
        <form class="form" action="/signin" method="POST">
            <h5>Fill in your details</h5>
            <label>Email</label>
            <input type="text" name="email" placeholder="enter email">
            <div style="color: white;">{{uid}}</div>

            <label>Password</label>
            <input type="password" name="pass" placeholder="enter password">
            <div style="color: white;">{{ups}}</div>

            <div>
                <button class="butt" type="submit"><i class="fa fa-check"></i>SignIn</button>
            </div>
        </form>
    </div>
</div>