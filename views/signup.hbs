<div class="main">
    <div class="title">
        <h3 style="margin-left: 55px; margin-top: 50px;">{{title}}</h3>
        <form class="form" action="/signup" method="POST">
            <h5>Fill in your details</h5>
            <label>Name</label>
            <input type="text" name="name" placeholder="enter name" value="{{user.name}}">
            <div style="color: white;">{{user.nameError}}</div>

            <label>Email</label>
            <input type="text" name="email" placeholder="enter email" value="{{user.email}}">
            <div style="color: white;">{{user.emailError}}</div>

            <label>Password</label>
            <input type="password" name="pass" placeholder="create password">
            <div style="color: white;">{{user.passError}}</div>

            <div>
                <button class="butt" type="submit"><i class="fa fa-check"></i>Sign Up</button>
            </div>
        </form>
    </div>
</div>